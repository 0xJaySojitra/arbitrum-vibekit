# Liquidation Prevention Agent Environment Configuration
# Copy this file to .env and fill in your values

# ========================================
# Required - LLM Provider
# ========================================
# OpenRouter API key for LLM operations (required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ========================================
# Required - Ember MCP Server
# ========================================
# Ember API endpoint for MCP operations (required for Aave interactions)
EMBER_ENDPOINT=grpc.api.emberai.xyz:50051

# ========================================
# Optional - Agent Configuration
# ========================================
# Agent server port (default: 3010)
PORT=3010

# Agent basic configuration
AGENT_NAME=Liquidation Prevention Agent
AGENT_VERSION=1.0.0
AGENT_DESCRIPTION=Aave liquidation prevention agent that monitors health factors and prevents liquidations

# LLM model configuration (default: deepseek/deepseek-chat-v3-0324:free)
LLM_MODEL=deepseek/deepseek-chat-v3-0324:free

# ========================================
# Optional - Monitoring Configuration  
# ========================================
# Health factor monitoring interval in milliseconds (default: 60000 = 1 minute)
MONITORING_INTERVAL=60000

# Health factor threshold levels
HEALTH_FACTOR_WARNING=1.5
HEALTH_FACTOR_DANGER=1.2
HEALTH_FACTOR_CRITICAL=1.05

# Maximum retry attempts for failed operations (default: 3)
MAX_RETRY_ATTEMPTS=3

# Gas price buffer multiplier for urgent transactions (default: 1.5)
GAS_PRICE_MULTIPLIER=1.5

# ========================================
# Optional - QuickNode (for enhanced monitoring)
# ========================================
# QuickNode API subdomain (optional - for enhanced blockchain monitoring)
QUICKNODE_SUBDOMAIN=your_subdomain

# QuickNode API key (optional - for enhanced blockchain monitoring)
QUICKNODE_API_KEY=your_quicknode_api_key

# ========================================
# Optional - Development & Debugging
# ========================================
# Enable CORS for development (default: true)
ENABLE_CORS=true

# Base path for API endpoints (default: /)
BASE_PATH=/

# Log level (default: info)
LOG_LEVEL=info

# Enable debug mode for detailed logging (default: false)
DEBUG_MODE=false

# ========================================
# Optional - Security & Performance
# ========================================
# Enable webhook notifications for critical events (default: false)
ENABLE_WEBHOOKS=false

# Webhook URL for notifications (optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/liquidation-alerts

# Rate limiting for API requests (requests per minute, default: 60)
RATE_LIMIT_RPM=60

# ========================================
# Private Key Storage (Required for autonomous operation)
# ========================================
# WARNING: Store private keys securely in production!
# These are used for automatic liquidation prevention transactions

# Primary wallet private key (required for signing prevention transactions)
# PRIVATE_KEY=your_private_key_here

# Optional backup wallet private key (for redundancy)
# BACKUP_PRIVATE_KEY=your_backup_private_key_here

# ========================================
# Strategy Configuration
# ========================================
# Default strategy preference (1=supply, 2=repay, 3=combined, default: auto)
DEFAULT_STRATEGY=auto

# Minimum token balance thresholds for strategy selection (in USD equivalent)
MIN_SUPPLY_BALANCE_USD=100
MIN_REPAY_BALANCE_USD=50

# Maximum transaction value per operation (in USD equivalent, default: 10000)
MAX_TRANSACTION_USD=10000
